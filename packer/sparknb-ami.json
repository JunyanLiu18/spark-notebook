{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": ""
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "us-east-1",
        "source_ami": "ami-9be6f38c",
        "instance_type": "t2.micro",
        "ssh_username": "ec2-user",
        "ami_name": "spark-notebook-{{timestamp}}"
    }],
    "provisioners": [{
        "type": "shell",
        "inline": [
            "sleep 30",
            "sudo yum update -y",
            "sudo yum install -y gcc gcc-c++ git java-1.8.0-openjdk",
            "sudo yum remove -y java-1.7.0-openjdk",
            "sudo -H pip install --upgrade pip",
            "sudo ln -s /usr/local/bin/pip /usr/bin",
            "sudo -H pip install jupyter boto requests",
            "sudo -H pip install numpy matplotlib pandas scipy",
            "echo",
            "echo",
            "pip freeze"
        ]
    }]
}

