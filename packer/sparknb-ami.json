{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": ""
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "us-east-1",
        "source_ami": "ami-66506c1c",
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "spark-notebook-{{timestamp}}"
    }],
    "provisioners": [{
        "type": "shell",
        "inline": [
            "sleep 30",
            "sudo apt-get -y update",
            "sudo apt-get -y install gcc g++ git default-jdk python3 python-pip python3-pip",
            "sudo apt-get -y install python-numpy python-matplotlib python-pandas python-scipy python3-numpy python3-matplotlib python3-pandas python3-scipy",
            "sudo -H pip install --upgrade pip",
            "sudo -H pip3 install --upgrade pip",
            "sudo -H pip install jupyter boto requests",
            "sudo -H pip3 install jupyter boto requests",
            "echo",
            "echo",
            "pip freeze"
        ]
    }]
}

